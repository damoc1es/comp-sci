<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.client.ui.LoginController">
    <children>
        <VBox alignment="CENTER" prefHeight="288.0" prefWidth="179.0" spacing="15.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
                    <font>
                        <Font size="41.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="24.0" />
                    </VBox.margin>
                </Text>
                <TextField fx:id="emailTextField" promptText="Email">
                    <font>
                        <Font size="17.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="passwordTextField" promptText="Password">
                    <font>
                        <Font size="17.0" />
                    </font>
                </PasswordField>
                <Button mnemonicParsing="false" onAction="#onLoginButtonClicked" prefHeight="31.0" prefWidth="204.0" text="Login">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="90.0" left="90.0" right="90.0" top="70.0" />
    </padding>
</VBox>
