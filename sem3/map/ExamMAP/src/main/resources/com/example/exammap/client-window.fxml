<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="com.example.exammap.ui.ClientWindowViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ComboBox fx:id="departureCityCombo" prefWidth="150.0" promptText="Departure City" />
      <ComboBox fx:id="destinationCityCombo" prefWidth="150.0" promptText="Destination City" />
      <Label fx:id="otherPeopleLabel" />
      <CheckBox fx:id="directRoutesCheckbox" mnemonicParsing="false" text="Direct Routes Only" />
      <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButtonClick" text="Search" />
      <Label fx:id="routesLabel" />
   </children>
</VBox>
